@model ResumeCheckSystem.Models.User


<h2>Fill the form to LogIn</h2>
<form action="/Account/LogIn" method="post">
    <div class="form-group">
        <label for="Email">Email</label><br>
        <input class="form-control input-width" name="Email" type="email">
    </div>
    
    <div class="form-group">
        <label for="Password">Password</label><br>
        <input class="form-control input-width" name="Password" type="password"><br>
    </div>
    
    <div class="form-group">
        <input type="submit" value="LogIn" class="btn btn-width btn-submit" />
    </div>
</form>

<div>
    @if (ViewBag.EmailError != null)
    {
        <small>@ViewBag.EmailError</small>
    }
</div>
